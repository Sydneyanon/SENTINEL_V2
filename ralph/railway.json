{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "ralph/Dockerfile"
  },
  "deploy": {
    "startCommand": "bash /app/ralph/ralph.sh --tool api 30",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
